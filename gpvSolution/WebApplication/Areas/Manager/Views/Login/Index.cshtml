
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ĐĂNG NHẬP || ADMIN</title>
    <link href="~/manager/css/site.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4"><img src="~/favicon.ico" width="50" height="50" /><b class="mb-2">ĐĂNG NHẬP</b></h3></div>
                                <div class="card-body">

                                    <form>
                                        <div class="form-group"><label class="small mb-1" for="inputEmailAddress">TÊN ĐĂNG NHẬP</label><input class="form-control py-4" id="inputEmailAddress" type="email" placeholder="Nhập tài khoản" /></div>
                                        <div class="form-group"><label class="small mb-1" for="inputPassword">MẬT KHẨU</label><input class="form-control py-4" id="inputPassword" type="password" placeholder="Nhập mật khẩu" /></div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox"><input class="custom-control-input" id="rememberPasswordCheck" type="checkbox" /><label class="custom-control-label" for="rememberPasswordCheck">Nhớ tài khoản</label></div>
                                        </div>
                                        <button class="btn btn-sm btn-block btn-success">ĐĂNG NHẬP</button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" crossorigin="anonymous"></script>
    <script src="~/manager/js/site.js"></script>
</body>
</html>
